# Setup  nano
# Created by Eduardo

#### HIGHLIGHT SYNTAX ####
include /usr/share/nano/*

#### Enable ####
set autoindent
set tabsize 4
set tabstospaces
set matchbrackets "(<[{)>]}"
set brackets ""')>]}"
set linenumbers
set constantshow
set nohelp
set multibuffer
set speller "aspell -x -c"
set softwrap
set fill 80

#### Disable ####
unset positionlog
unset casesensitive
unset mouse
unset quiet
unset locking
unset nonewlines
unset suspend
